---
# role: {{ role_name }}
# file: meta/main.yml

galaxy_info:
  role_name: {{ role_name }}
  author: fgoebel
  description: Ansible role for setting up {{ role_name|replace('ansible-role-', '') }}.
  company: ''

  # If the issue tracker for your role is not on github, uncomment the
  # next line and provide a value
  issue_tracker_url: https://github.com/fgoebel/{{ role_name }}/issues

  license: MIT

  min_ansible_version: 2.8

  # If this a Container Enabled role, provide the minimum Ansible Container version.
  # min_ansible_container_version:

  github_branch: master

  # platforms is a list of platforms, and each platform has a name and a list of versions.
  #
  platforms:
    - name: Alpine
      versions:
        - 3.10
        - 3.11
    - name: Amazon
      versions:
        - 2
    - name: Archlinux
    - name: CentOS
      versions:
        - 7
        - 8
    - name: Debian
      versions:
        - 9
        - 10
    - name: Fedora
      versions:
        - 31
    - name: Oracle
      versions:
        - 7
        - 8
    - name: OpenSuse Leap
      versions:
        - 15
    - name: Ubuntu
      versions:
        - 18.04
        - 20.04

  galaxy_tags: []

  dependencies: []
{{ blank_line }}
